<!-- 啟動 SLAM 建圖節點的設定檔 -->
<launch>    
  
  <!-- 定義可調整的參數 -->
  <arg name="set_base_frame" default="base_link"/>  <!-- 機器人基座坐標系名稱 -->
  <arg name="set_odom_frame" default="odom"/>       <!-- 里程計坐標系名稱 -->
  <arg name="set_map_frame"  default="map"/>        <!-- 地圖坐標系名稱 -->

  <!-- 啟動 Gmapping SLAM 節點 -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <!-- 設定座標系統參數 -->
    <param name="base_frame" value="$(arg set_base_frame)"/>  <!-- 設定機器人基座坐標系 -->
    <param name="odom_frame" value="$(arg set_odom_frame)"/>  <!-- 設定里程計坐標系 -->
    <param name="map_frame"  value="$(arg set_map_frame)"/>   <!-- 設定地圖坐標系 -->
    
    <!-- 載入 gmapping 的詳細參數設定檔 -->
    <rosparam command="load" file="/home/saki/catkin_ws/param/gmapping_params.yaml"/>
  </node> 
    
</launch>
