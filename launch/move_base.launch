<launch>
  <!-- Arguments -->  
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/> 
  

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen"> 
    <!-- Load common parameters -->
    <rosparam file="$(find Little_Pro_B_Module)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find Little_Pro_B_Module)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <!-- Load specific parameters -->
    <rosparam file="$(find Little_Pro_B_Module)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find Little_Pro_B_Module)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find Little_Pro_B_Module)/param/teb_local_planner_params.yaml" command="load" />
    
    <!-- Set planner configs -->
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    
    <!-- Planner frequency -->
    <param name="controller_frequency" value="10.0" />
    <param name="planner_frequency" value="5.0" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="TEBPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
