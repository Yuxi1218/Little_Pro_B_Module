<launch>
  <!-- 添加必要的參數宣告 -->
  <arg name="cmd_vel_topic" default="/cmd_vel"/>
  <arg name="odom_topic" default="odom"/>
  <arg name="scan_topic" default="scan"/>
  <arg name="move_forward_only" default="false"/>
  
  <!-- 啟動 Lidar，包含雷射掃描儀的驅動程式和相關設定 -->
  <include file="$(find ydlidar)/launch/X4_lidar.launch" />    
  <!-- 啟動 pibot 機器人，包含底盤、馬達和感測器的啟動 -->
  <include file="$(find pibot_bringup)/launch/bringup.launch" />   

  <!-- Use Hector SLAM instead of GMapping -->
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <!-- Frame names -->
    <param name="map_frame" value="map" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />
    
    <!-- Tf use -->
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_map_odom_transform" value="true"/>
    <param name="pub_odometry" value="true"/>
    <param name="tf_map_scanmatch_transform_frame_name" value="scanmatcher_frame"/>
    <param name="base_frame" value="base_link"/>
    <param name="output_timing" value="false"/>
    <param name="scan_subscriber_queue_size" value="5"/>
    <param name="map_pub_period" value="0.5"/>
    <param name="update_factor_occupied" value="0.9"/>
    
    <!-- 添加時間同步相關參數 -->
    <param name="transform_pub_period" value="0.05"/>
    <param name="tf_broadcast_rate" value="20.0"/>
    <param name="timing_output" value="false"/>
    
    <!-- 確保地圖更新頻率合適 -->
    <param name="map_update_distance_thresh" value="0.2"/>
    <param name="map_update_angle_thresh" value="0.05" />
    <param name="laser_z_min_value" value = "-1.0" />
    <param name="laser_z_max_value" value = "1.0" />
    
    <!-- Advertising config --> 
    <param name="advertise_map_service" value="true"/>
    
    <!-- Scan topic -->
    <param name="scan_topic" value="$(arg scan_topic)"/>
  </node>

  <!-- 啟動 move_base，負責路徑規劃和運動控制 -->
  <!-- move_base 的啟動檔案 -->
  <include file="/home/saki/catkin_ws/launch/move_base.launch">   
    <arg name="cmd_vel_topic" value="$(arg cmd_vel_topic)"/>
    <arg name="odom_topic" value="$(arg odom_topic)"/>
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- TEB Local Planner 參數設定 -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find Little_Pro_B_Module)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find Little_Pro_B_Module)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <!-- 設定機器人 footprint -->
    <rosparam param="footprint">[[0.17, 0.17], [-0.17, 0.17], [-0.17, -0.17], [0.17, -0.17]]</rosparam>
    
    <!-- TEB Local Planner 特定參數 -->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="controller_frequency" value="10.0" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>
</launch>