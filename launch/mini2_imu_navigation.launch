  <include file="/home/mini2/catkin_ws/launch/amcl.launch"/>
  
  <!-- move_base -->
  <include file="/home/mini2/catkin_ws/launch/move_base.launch">   
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>
  
</launch>
