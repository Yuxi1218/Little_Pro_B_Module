<launch>
  <!-- 啟動 Lidar，包含雷射掃描儀的驅動程式和相關設定 -->
  <include file="$(find ydlidar)/launch/X4_lidar.launch" />    
  <!-- 啟動 pibot 機器人，包含底盤、馬達和感測器的啟動 -->
  <include file="$(find pibot_bringup)/launch/bringup.launch" />   

  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="move_forward_only" value="$(arg move_forward_only)" /> <!-- move_forward_only 參數，預設值為 false -->
    <rosparam file="/home/saki/catkin_ws/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="/home/saki/catkin_ws/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="/home/saki/catkin_ws/param/local_costmap_params.yaml" command="load" />
    <rosparam file="/home/saki/catkin_ws/param/global_costmap_params.yaml" command="load" />
    <rosparam file="/home/saki/catkin_ws/param/move_base_params.yaml" command="load" />
    <rosparam file="/home/saki/catkin_ws/param/teb_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>

  <!-- Use Hector SLAM instead of GMapping -->
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <!-- Frame names -->
    <param name="map_frame" value="map" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />
    
    <!-- Tf use -->
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_map_odom_transform" value="true"/>
    
    <!-- Map size / start point -->
    <param name="map_resolution" value="0.050"/>
    <param name="map_size" value="2048"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5" />
    <param name="map_multi_res_levels" value="2" />
    
    <!-- Map update parameters -->
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.9" />    
    <param name="map_update_distance_thresh" value="0.4"/>
    <param name="map_update_angle_thresh" value="0.06" />
    <param name="laser_z_min_value" value = "-1.0" />
    <param name="laser_z_max_value" value = "1.0" />
    
    <!-- Advertising config --> 
    <param name="advertise_map_service" value="true"/>
    
    <!-- Scan topic -->
    <param name="scan_topic" value="scan"/>
  </node>

  <!-- 啟動 move_base，負責路徑規劃和運動控制 -->
  <arg name="move_forward_only" default="false"/>
  <!-- move_base 的啟動檔案 -->
  <include file="/home/saki/catkin_ws/launch/move_base.launch">   
    <!-- 設定是否只允許機器人向前移動 -->
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>
</launch>
